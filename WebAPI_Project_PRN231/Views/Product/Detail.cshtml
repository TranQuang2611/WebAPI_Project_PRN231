@using WebAPI_Project_PRN231.DTO;
@model ProductDTO

@{
    Layout = "_Layout";
    decimal percentRateStar = Model.Reviews.Count();
    decimal percentRate5Star = percentRateStar != 0 ? Model.Reviews.Where(x => x.Rating == 5).Count() * 100 / percentRateStar : 0;
    decimal percentRate4Star = percentRateStar != 0 ? Model.Reviews.Where(x => x.Rating == 4).Count() * 100 / percentRateStar : 0;
    decimal percentRate3Star = percentRateStar != 0 ? Model.Reviews.Where(x => x.Rating == 3).Count() * 100 / percentRateStar : 0;
    decimal percentRate2Star = percentRateStar != 0 ?Model.Reviews.Where(x => x.Rating == 2).Count()* 100 / percentRateStar : 0;
    decimal percentRate1Star = percentRateStar != 0 ? Model.Reviews.Where(x => x.Rating == 1).Count() * 100 / percentRateStar : 0;
    decimal percentRate0Star = percentRateStar != 0 ? Model.Reviews.Where(x => x.Rating == 0).Count() * 100 / percentRateStar : 0;
}

